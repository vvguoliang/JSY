<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 相当于padding -->
            <item android:left="@dimen/common_10dp" android:top="@dimen/common_10dp">
                <shape>
                    <solid android:width="2dp" android:color="@color/white" />
                    <corners android:radius="@dimen/common_10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="0.5dp" android:top="0.5dp">
                <shape>
                    <solid android:color="@color/common_light_grey" />
                    <corners android:radius="@dimen/common_10dp" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <!-- 相当于padding -->
            <item android:bottom="@dimen/common_1dp" android:right="@dimen/common_1dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="@dimen/common_5dp" android:topLeftRadius="@dimen/common_2dp" />
                    <stroke android:width="0.2dp" android:color="@color/common_light_grey" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>