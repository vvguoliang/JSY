<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleIndicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_light_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/commissioning_relat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/commissioning_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_commissioning"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/commissioning_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <com.jsy.jsydemo.control.MyButton
            android:id="@+id/commissioning_button"
            android:layout_width="@dimen/common_80dp"
            android:layout_height="@dimen/common_30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/common_30dp"
            android:background="@drawable/bg_commissioning_selector"
            android:textColor="@color/white"
            android:textSize="@dimen/common_14dp"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewpager_relat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <com.jsy.jsydemo.view.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/common_30dp"
            CircleIndicator:ci_background="@color/common_loan_personal"
            CircleIndicator:ci_gravity="center"
            CircleIndicator:ci_margin="5dp"
            CircleIndicator:ci_mode="inside"
            CircleIndicator:ci_radius="10dp"
            CircleIndicator:ci_selected_background="0xffFFD700" />

        <com.jsy.jsydemo.control.MyButton
            android:id="@+id/commissioning_loan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/common_90dp"
            android:background="@drawable/bg_speedloan_red_selector"
            android:paddingBottom="@dimen/common_10dp"
            android:paddingLeft="@dimen/common_20dp"
            android:paddingRight="@dimen/common_20dp"
            android:paddingTop="@dimen/common_10dp"
            android:text="@string/loan_commossooning"
            android:textColor="@color/common_basic_red"
            android:textSize="@dimen/common_20dp"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
