<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/common_2dp"
    android:background="@drawable/bg_shape_corner"
    android:cropToPadding="false"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_10dp"
    android:paddingRight="@dimen/common_10dp"
    android:paddingBottom="@dimen/common_10dp"
    >

    <ImageView
        android:id="@+id/quick_bank_image"
        android:layout_width="@dimen/common_70dp"
        android:layout_height="@dimen/common_70dp"
        android:layout_gravity="center"
        android:padding="@dimen/common_10dp" />

    <com.jsy.jsydemo.control.MyTextView
        android:id="@+id/quick_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/common_10dp" />

    <com.jsy.jsydemo.control.MyTextView
        android:id="@+id/quick_bank_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_2dp"
        android:gravity="center"
        android:textColor="@color/common_brown_text"
        android:textSize="@dimen/common_8dp" />

</LinearLayout>
