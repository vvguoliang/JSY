<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_light_grey"
    android:orientation="vertical">

    <include
        layout="@layout/tab_activity_fra"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_48dp" />


    <include
        layout="@layout/view_viewpage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:src="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_10dp"
            android:paddingTop="@dimen/common_10dp">


            <ImageView
                android:layout_width="@dimen/common_5dp"
                android:layout_height="@dimen/common_30dp"
                android:src="@color/common_violet" />

            <com.jsy.jsydemo.control.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10dp"
                android:text="@string/name_quick_card"
                android:textColor="@color/black"
                android:textSize="@dimen/common_16dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:src="@color/black" />
    </LinearLayout>


</LinearLayout>
