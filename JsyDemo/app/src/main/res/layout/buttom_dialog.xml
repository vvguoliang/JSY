<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pop_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.jsy.jsydemo.control.MyButton
                android:id="@+id/btn_take_photo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_photo_top_shape"
                android:padding="@dimen/common_6dp"
                android:text="@string/name_loan_you"
                android:textColor="@color/common_pop_blue"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_line_dp"
                android:background="@color/common_press" />

            <com.jsy.jsydemo.control.MyButton
                android:id="@+id/btn_pick_photo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_photo_middle_shape"
                android:padding="@dimen/common_6dp"
                android:text="@string/name_loan_wu"
                android:textColor="@color/common_pop_blue"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <com.jsy.jsydemo.control.MyButton
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_photo_bottom_shape"
                android:padding="@dimen/common_10dp"
                android:text="@string/name_loan_cancel"
                android:textColor="@color/common_pop_blue"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>